generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Funcionario {
  id        Int    @id @default(autoincrement())
  nome      String @db.VarChar(255)
  sobrenome String @db.VarChar(255)
  cargo     String @db.VarChar(255)
  salario   Float  @default(0)
  idade     Int    @default(0)

  @@map("funcionarios")
}
